@model IEnumerable<MaxCinema.Models.Customer>

@{
    ViewData["Title"] = "DisplayAll";
}

<h1 class="family-font  border rounded-2 d-block accor-button glass-effect striped-background">Admin Console</h1>
<body class="family-font">

    <div>
        <p>
            <a asp-action="CreateCustomer" class="btn btn-danger btn-sm box-shadow">Create New</a>
        </p>
    </div>
    <div class="container family-font"></div>
    <div class="btnAccess">
        <div class="position-absolute top-0 end-0 p-3 m-5">
            <a href="https://localhost:7022/Movie" class="btn btn-primary mb-3 box-shadow m-3 family-font" tabindex="-1" role="button" aria-disabled="true">Movie Editor</a>
        </div>
    </div>

    <div class="row mt-5 family-font">
        @foreach (var item in Model)
        {
            <div class="col-md-6 mb-4 glass-effect box-shadow striped-background accor-button red-border">
                <div class="card text-white accor-button glass-effect striped-background">
                    <div class="card-body">
                        <h5 class="card-title" title="@item.Firstname @item.Lastname">@item.Firstname @item.Lastname</h5> 
                        <p class="card-text"><strong>@item.EmailAddress | @item.Phone | @item.BillingAddress | @item.BillingZip | @item.BillingCity | @item.DeliveryAddress | @item.DeliveryZip</strong></p>

                        <button type="button" class="badge btn btn-danger box-shadow badge-pill rounded-pill  Striped-button striped-background">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trophy-fill" viewBox="0 0 16 16">
                                <path d="M2.5.5A.5.5 0 0 1 3 0h10a.5.5 0 0 1 .5.5q0 .807-.034 1.536a3 3 0 1 1-1.133 5.89c-.79 1.865-1.878 2.777-2.833 3.011v2.173l1.425.356c.194.048.377.135.537.255L13.3 15.1a.5.5 0 0 1-.3.9H3a.5.5 0 0 1-.3-.9l1.838-1.379c.16-.12.343-.207.537-.255L6.5 13.11v-2.173c-.955-.234-2.043-1.146-2.833-3.012a3 3 0 1 1-1.132-5.89A33 33 0 0 1 2.5.5m.099 2.54a2 2 0 0 0 .72 3.935c-.333-1.05-.588-2.346-.72-3.935m10.083 3.935a2 2 0 0 0 .72-3.935c-.133 1.59-.388 2.885-.72 3.935" />
                            </svg>
                            <span class="badge badge-danger badge-primary"><i class="bi bi-crown"></i></span>
                            <span class="sr-only">Top Whale</span>
                        </button>

                        <span class="badge badge-danger badge-primary"> <i class="bi bi-trophy-fill"></i></span>
                        </div>
                    <div class="card-footer">
                        <small class="text-muted"> &copy; Max Cinema - Customer</small>
                    </div>
                    <div class="card-body d-flex justify-content-between">

                        <button type="button" class="btn btn-success btn-md box-shadow">View Profile</button>


                        <a asp-action="Edit" asp-route-id="@item.Id" type="button" class="btn btn-primary btn-md box-shadow">Edit</a>


                        <button type="button" class="btn btn-info btn-sm box-shadow">Details</button>


                        <button type="button" class="btn btn-danger btn-md box-shadow">Delete</button>
                        
                    </div>
                </div>
            </div>

        }
    </div>
</body>







@{
    ViewBag.Title = "Admin Login";
}

<h2 class="family-font border rounded-2 d-block accor-button glass-effect striped-background">Admin Login</h2>
<div class="container">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <form asp-action="Login" method="post" class="family-font">
                <div>
                    <label for="password">Password</label>
                    <input type="password" id="password" name="password" required class="form-control" />
                </div>
                <div class="mt-3">
                    <button type="submit" class="btn btn-primary">Login</button>
                </div>

                @if (ViewBag.Error != null)
                {
                    <div class="text-danger mt-3">@ViewBag.Error</div>
                }
            </form>
        </div>
    </div>
</div>

